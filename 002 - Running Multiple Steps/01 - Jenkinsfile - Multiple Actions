def writeToFile (text = '') {
	touch "$text"
	"date > $text"
	cat "$text"
}

pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
    stage('Stage 1') {
            steps {
                writeToFile('file.txt')
		sh 'sleep 10s'
		writeToFile('file.txt')
            }
        }
    }
}
